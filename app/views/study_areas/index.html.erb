<p id="notice"><%= notice %></p>

<h1>Study Areas</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_areas.each do |study_area| %>
      <tr>
        <td><%= study_area.location %></td>
        <td><%= link_to 'Show', study_area %></td>
        <td><%= link_to 'Edit', edit_study_area_path(study_area) %></td>
        <td><%= link_to 'Destroy', study_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

