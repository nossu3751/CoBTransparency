<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Favicons -->
    <%= favicon_link_tag asset_path('COB_B.jpeg'), rel: "icon"%>
    <%# <%= favicon_link_tag asset_path('apple-touch-icon.png'), rel: "apple-touch-icon"%> %>

    <%= stylesheet_link_tag 'application', media: 'all',
                                           'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
    
  </head>
  <body>
    <%= render 'layouts/header' %>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <div class= "map-container">
      <%= yield %>
      </div>
      
      <div class="slider close">
          <div id="clickInfo">Click for more information</div>
          <div id="neighborhoodInfo"></div>
          <div id="sensorInfo"></div>
          <button id="exitthis"> Close </button>
      </div>  
      <%= debug(params) if Rails.env.development? %>
  </body>

</html>

